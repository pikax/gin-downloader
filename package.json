{
  "name": "gin-downloader",
  "version": "1.0.3",
  "description": "Simple manga scrapper for famous online manga websites.",
  "keywords": [
    "manga",
    "downloader",
    "crawler",
    "manga-downloader",
    "gin-manga",
    "manga-fox",
    "mangafox",
    "mangapanda",
    "mangahere"
  ],
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "homepage": "https://github.com/pikax/gin-downloader#readme",
  "scripts": {
    "build": "yarn run build:ts",
    "build:ts": "trash build && tsc --outDir build",
    "oldlint": "tslint -c tslint.json --project tsconfig.json --force",
    "lint": "tslint {src,test}/**/*.ts --format stylish",
    "nyc": "nyc --check-coverage mocha test/**/*.spec.ts test/**/**/*.spec.ts --recursive",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} yarn run nyc",
    "test:Mock": "cross-env _MOCK_SITES_=YES TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} yarn run nyc",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test:watch": "mocha -w --reporter min",
    "dist": "yarn run dist:build | yarn run dist:declaration",
    "dist:build": "yarn build && yarn dist:rollup",
    "dist:rollup": "rollup -c",
    "dist:declaration": "copyfiles -u 1 ./build/**/*d.ts dist/types",
    "clean": "trash src/**/*.js* src/**/*.d.ts test/**/*.js* test/**/*.d.ts"
  },
  "repository": "https://github.com/pikax/gin-downloader",
  "author": "pikax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pikax/gin-downloader/issues"
  },
  "nyc": {
    "exclude": [
      "/**/*.d.ts",
      "test/**/*"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.40",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.0",
    "chai": "^4.0.2",
    "coveralls": "^2.13.0",
    "cross-env": "^5.0.1",
    "mocha": "^3.4.2",
    "nock": "^9.0.13",
    "nyc": "^11.0.2",
    "rollup": "^0.43.0",
    "rollup-analyzer": "^1.0.2",
    "rollup-plugin-cleanup": "^1.0.1",
    "rollup-watch": "^4.0.0",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.1",
    "@types/debug": "~0.0.29",
    "@types/lodash": "^4.14.66",
    "@types/qs": "^6.2.31",
    "@types/request": "^0.0.44",
    "cheerio": "^1.0.0-rc.1",
    "cloudscraper": "^1.4.1",
    "debug": "~2.6.3",
    "lodash": "~4.17.4",
    "moment": "^2.18.1",
    "no-case": "~2.3.1",
    "qs": "^6.4.0",
    "request": "^2.81.0",
    "requestretry": "~1.12.0"
  }
}
