{
  "name": "gin-downloader",
  "version": "2.0.0-beta.0",
  "description": "Simple manga scrapper for famous online manga websites.",
  "keywords": [
    "manga",
    "downloader",
    "crawler",
    "manga-downloader",
    "gin-manga",
    "manga-fox",
    "mangafox",
    "mangapanda",
    "mangahere"
  ],
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "homepage": "https://github.com/pikax/gin-downloader#readme",
  "scripts": {
    "build": "yarn run build:ts",
    "build:ts": "trash build && tsc --outDir build",
    "oldlint": "tslint -c tslint.json --project tsconfig.json --force",
    "lint": "tslint {src,test}/**/*.ts --format stylish",
    "nyc": "nyc --check-coverage mocha __test__/**/*.spec.ts __test__/**/**/*.spec.ts --recursive",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} yarn run nyc",
    "test:Mock": "cross-env _MOCK_SITES_=YES TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} yarn run nyc",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test:watch": "mocha -w --reporter min",
    "dist": "yarn run dist:build | yarn run dist:declaration",
    "dist:build": "yarn build && yarn dist:rollup",
    "dist:rollup": "rollup -c",
    "dist:declaration": "copyfiles -u 1 ./build/**/*d.ts dist/types",
    "clean": "trash src/**/*.js* src/**/*.d.ts test/**/*.js* test/**/*.d.ts __tests__/**/*.js* __tests__/**/*.d.ts",
    "watch": "rollup --watch --config"
  },
  "repository": "https://github.com/pikax/gin-downloader",
  "author": "pikax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pikax/gin-downloader/issues"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "coverageDirectory": "coverage",
    "mapCoverage": true
  },
  "nyc": {
    "exclude": [
      "/**/*.d.ts",
      "test/**/*"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/fs-extra": "^5.0.0",
    "@types/node": "^8.5.7",
    "coveralls": "^2.13.0",
    "cross-env": "^5.1.3",
    "fs-extra": "^5.0.0",
    "jest": "^22.0.4",
    "rollup": "^0.53.3",
    "rollup-analyzer": "^1.1.0",
    "rollup-plugin-cleanup": "^2.0.0",
    "rollup-plugin-typescript2": "^0.9.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^2.7.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.7",
    "@types/debug": "~0.0.30",
    "@types/lodash": "^4.14.92",
    "@types/qs": "^6.5.1",
    "@types/request": "^2.0.9",
    "cheerio": "^1.0.0-rc.2",
    "cloudscraper": "^1.4.1",
    "debug": "~3.1.0",
    "lodash": "~4.17.4",
    "moment": "^2.20.1",
    "no-case": "~2.3.2",
    "promise-queue": "^2.2.3",
    "qs": "^6.5.1",
    "request": "^2.83.0",
    "requestretry": "~1.12.2"
  }
}
