{
  "name": "gin-downloader",
  "version": "1.0.0",
  "description": "Simple manga scrapper for famous online manga websites.",
  "keywords": [
    "manga",
    "downloader",
    "crawler",
    "manga-downloader",
    "gin-manga",
    "manga-fox",
    "mangafox",
    "mangapanda",
    "mangahere"
  ],
  "main": "src/index.js",
  "types": "./src/index.d.ts",
  "homepage": "https://github.com/pikax/gin-downloader#readme",
  "scripts": {
    "build-ts": "rmdir /s /q lib && tsc --outDir lib",
    "build": "npm run build-ts",
    "lint": "tslint {src,test}/**/*.ts --format stylish",
    "test": "nyc --check-coverage mocha test/**/*.spec.ts test/sites/batoto/*.spec.ts",
    "test:watch": "mocha -w --reporter min"
  },
  "repository": "https://github.com/pikax/gin-downloader",
  "author": "pikax",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pikax/gin-downloader/issues"
  },
  "nyc": {
    "exclude":[
      "/**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "check-coverage": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.10",
    "coveralls": "^2.13.0",
    "cross-env": "^5.0.0",
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "nyc": "^11.0.2",
    "ts-node": "^3.0.4",
    "tslint": "^5.4.2",
    "typescript": "^2.3.4"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.1",
    "@types/debug": "~0.0.29",
    "@types/lodash": "^4.14.65",
    "@types/qs": "^6.2.31",
    "@types/request": "^0.0.43",
    "cheerio": "^1.0.0-rc.1",
    "cloudscraper": "^1.4.1",
    "debug": "~2.6.3",
    "lodash": "~4.17.4",
    "moment": "^2.18.1",
    "no-case": "~2.3.1",
    "qs": "^6.4.0",
    "request": "^2.81.0",
    "requestretry": "~1.12.0"
  }
}
