{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "target": "es5",
    "sourceMap": true,
    "alwaysStrict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "traceResolution": false,

    "declarationDir": "dist",
    "moduleResolution": "node",
    "typeRoots" : ["./node_modules/@types"],

    "lib": ["es6", "es2015","dom", "es7"]
  },
  "exclude": [
    "node_modules",
    "src/old/",
    "src/sites/kissmanga",
    "src/sites/mangafox",
    "src/sites/mangahere",
    "src/sites/mangapanda"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}